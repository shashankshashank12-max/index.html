<body>
  <h1>üéâ Welcome to My Personalized Greeting Site üéâ</h1>
  
  <input type="text" id="name" placeholder="Enter Name">
  <textarea id="wish" placeholder="Enter Greeting / Wish"></textarea>
  <br>
  <button onclick="saveGreeting()">Save Greeting</button>
  <button onclick="showGreeting()">Show Greeting</button>

  <div id="greetingDisplay" class="greeting-card"></div>

  <!-- Background Music with Play Button -->
  <div id="musicControls">
    <audio id="bgMusic" loop>
      <source src="song.mp3" type="audio/mpeg">
    </audio>
    <button onclick="document.getElementById('bgMusic').play()">‚ñ∂ Play Music</button>
    <button onclick="document.getElementById('bgMusic').pause()">‚è∏ Pause Music</button>
  </div>

  <script>
    // Save greeting in localStorage
    function saveGreeting() {
      let name = document.getElementById('name').value.trim();
      let wish = document.getElementById('wish').value.trim();

      if(name && wish) {
        localStorage.setItem(name, wish);
        alert("üéâ Greeting saved for " + name);
      } else {
        alert("‚ö† Please enter both name and greeting!");
      }
    }

    // Show greeting for a given name
    function showGreeting() {
      let name = document.getElementById('name').value.trim();
      let wish = localStorage.getItem(name);

      if(wish) {
        document.getElementById('greetingDisplay').innerHTML = 
          `<h2>Hello ${name}! üéÇ</h2><p>${wish}</p>`;
      } else {
        document.getElementById('greetingDisplay').innerHTML = 
          `<p>No greeting found for ${name} üò¢</p>`;
      }
    }
  </script>
